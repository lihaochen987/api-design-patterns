<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="AutoMapper" Version="13.0.1" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="8.0.10" />
        <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="8.0.10">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="Swashbuckle.AspNetCore" Version="6.4.0"/>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Product\Controllers\CreateProductRequest.cs">
        <DependentUpon>CreateProductController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\GetProductRequest.cs">
        <DependentUpon>GetProductController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\ListProductsRequest.cs">
        <DependentUpon>ListProductsController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\ListProductsResponse.cs">
        <DependentUpon>ListProductsController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\UpdateProductRequest.cs">
        <DependentUpon>UpdateProductController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\DeleteProductRequest.cs">
        <DependentUpon>DeleteProductController.cs</DependentUpon>
      </Compile>
      <Compile Update="Product\Controllers\ReplaceProductRequest.cs">
        <DependentUpon>ReplaceProductController.cs</DependentUpon>
      </Compile>
    </ItemGroup>

</Project>
